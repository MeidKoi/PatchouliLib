@code{
	public class MaterialInfo{
		public string Name {get; set;} = null!;
		public string Description {get; set;} = null!;
		public string Author {get; set;} = null!;
		public string Categories {get; set;} = null!;
		public string Type {get;set;} = null!;
		public string FileIcon {get; set;} = null!; 
	}

	private class Author{
		public int IdAuthor {get; set;}
		public string NameAuthor {get;set;} = null!;
	}

	private string GetCategory(int categoryId){
		switch (categoryId){
			//Начало с 2, потому что 1 выделена для default
			default:
				return "Manga";
				//break;
			case 2:
				return "Manhua";
				//break;
			case 3:
				return "Manhwa";
				//break;
			case 4:
				return "Comics";
				//break;
		}
	}

		private string GetAuthorStatus(int authorStatusId){
		switch (authorStatusId){
			default:
				return "Ongoing";
				//break;
			//Начало с 2, потому что 1 выделена для default
			case 2:
				return "Completed";
				//break;
			case 3:
				return "Stopped";
				//break;
			case 4:
				return "Discontinued";
				//break;
		}
	}

	public List<Material> latestMaterialData;
	public List<MaterialInfo> latestMaterial;
	public bool isPopularLoading = false;
	protected override async Task OnInitializedAsync(){
		try{
			isPopularLoading = true;
			HttpClient client = new HttpClient();
			client.BaseAddress = new Uri("https://mnogolibapi-f7vitvir.b4a.run");
			HttpResponseMessage responseGetMaterial = await client.GetAsync($"/api/Material");
			if (responseGetMaterial.IsSuccessStatusCode){
				latestMaterialData = await responseGetMaterial.Content.ReadFromJsonAsync<List<Material>>() ?? new List<Material>();
				latestMaterial = new List<MaterialInfo>();
				Console.WriteLine(responseGetMaterial.StatusCode.ToString());

				if (latestMaterialData is null || latestMaterialData.Count == 0){
					return;
				}

				foreach (Material data in latestMaterialData.OrderByDescending(lm => lm.LastUpdateTime).Take(3)){
					MaterialInfo info = new MaterialInfo();
					info.Name = data.NameMaterial;
					info.Description = data.DescriptionMaterial;
					//Категории и типы - локально
					info.Categories = GetCategory(data.IdCategory);
					info.Type = GetAuthorStatus(data.IdAuthorStatus);
					//Автора можно вытягивать
					info.Author = (await client.GetFromJsonAsync<Author>($"/api/Author/{data.IdAuthor}") ?? new Author(){NameAuthor = "Name not found"}).NameAuthor;
					//Иконку тоже
					info.FileIcon = (await client.GetFromJsonAsync<Models.File>($"/api/File/{data.FileIcon}") ?? new Models.File(){PathFile = "noFilePath"}).PathFile;
					
					latestMaterial.Add(info);
				}
			}
		}
		catch (Exception ex){
			Console.WriteLine(ex.Message);
		}
		finally{
			isPopularLoading = false;
		}
	}

}