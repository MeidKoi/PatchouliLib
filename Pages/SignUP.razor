@page "/signup"

<div class="container">
    <div class="login-form">
        <h1>Регистрация</h1>
        <form action="/signup" method="post">
            
            <label for="email">Почта:</label>
            <input type="text" id="email" name="email" required >

            <label for="username">Имя пользователя:</label>
            <input type="text" id="username" name="username" required>

            <label for="password1">Пароль:</label>
            <input type="password1" id="password1" name="password1" required>
                
            <label for="password2">Подтвредите пароль:</label>
            <input type="password2" id="password2" name="password2" required>

            <button type="submit">Зарегестрироваться</button>
            <a href="#" class="forgot-password">Забыли пароль?</a>

            <div class="signup-link">
                <p>Есть аккаунт?<a href="/signin">Войдите</a></p>
            </div>

        </form>
    </div>
</div>


<style>
    /* style.css */
    body {
        font-family: sans-serif;
        background-color: #1e1e1e; /* Темно-серый фон */
        color: #e0e0e0; /* Светло-серый текст */
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
    }

    .container {
        width: 300px;
        padding: 20px;
        background-color: #282828; /* Чуть светлее фон для формы */
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }


    .login-form h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #ffffff; /* Белый заголовок */
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password1"],
    input[type="password2"] {
        width: 98%;
        margin-bottom: 15px;
        border: 1px solid #444;
        background-color: #383838;
        color: #e0e0e0;
        border-radius: 4px;
    }


    button {
        width: 100%;
        padding: 10px;
        background-color: #538d22; /* Зеленая кнопка */
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        justify-content: center;
        align-items: center;
    }

    .forgot-password, .signup-link a {
        color: #538d22; /* Зеленые ссылки */
        text-decoration: none;
        display: block;
        text-align: center;
        margin-top: 10px;
    }

    .signup-link p {
        text-align: center;
    }
</style>